{% extends 'security/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="nes-container is-centered is-rounded">
            <div class="nes-text is-primary">
                <p>Connexion au Back-Office</p>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {{ form_start(form) }}

            {{ form_row(form.username) }}
            {{ form_row(form.password) }}

                <button type="submit" class="nes-btn is-success">Valider</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
