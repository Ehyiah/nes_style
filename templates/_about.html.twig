<div id="about-area">

    <div class="about-tab nes-container is-rounded with-title">
    <div id="close-about" class="close-button nes-pointer">&times</div>

    <p class="title">A propos de moi</p>
        {% for description in project_collection.descriptions %}

            {% if project_collection.descriptions|length == 1 %}
                <h2>{{ description.title }}</h2>
                <hr>
                <p>{{ description.about }}</p>
            {% endif %}

            {% if project_collection.descriptions|length > 1 %}
                <h2>{{ description.title }}</h2>
                <hr>
                <p>{{ description.about }}</p>

                <h1 class="text-center">---</h1>
            {% endif %}
        {% endfor %}
    </div>

</div>
